<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col mdl-cell--4-offset-desktop">

        <div class="demo-card-wide mdl-card mdl-shadow--2dp" style="width: 100%; padding-left: 25px; padding-right: 25px; padding-top: 5px; padding-bottom: 25px;">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">Signup</h2>
            </div>
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">{{ message }}</h2>
            </div>
            <div class="mdl-card__supporting-text">
        
                <form action="/signup" method="post">

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="text" id="email">
                        <label class="mdl-textfield__label" for="email">User Name</label>
                    </div>
                    
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input class="mdl-textfield__input" type="password" id="password">
                        <label class="mdl-textfield__label" for="password">Password</label>
                    </div>
                    <br>
                    
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                        Signup
                    </button>
                    
                </form>
            </div>
            
            <div class="mdl-card__actions mdl-card--border">
                
                <a href="/login" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Login
                </a>
                <a href ="/" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    home
                </a>
                
            </div>
            
    </div>
</div>
